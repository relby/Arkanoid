        <Border HorizontalAlignment="Left" Height="1200" Margin="1030,0,0,0" VerticalAlignment="Top" Width="170" Background="Yellow"/>
        <Grid x:Name="grid" Height="750" Width="1000" Margin="30,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFFDC1C1" >
            
        </Grid>
    </Grid>

</Window>
